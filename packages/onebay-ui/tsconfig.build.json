{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "jsxFactory": "h",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "declaration": true
  },
  "include": [
    "src/**/**.tsx",
    "src/**/**.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules/*",
    "**/*.spec.tsx",
    "dist"
  ],
  "compileOnSave": false
}
