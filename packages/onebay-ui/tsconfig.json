{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es6",
    "jsx": "preserve",
    "jsxFactory": "h",
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "output",
    "declarationDir": "types",
    "allowJs": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*",
    "global.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.tsx",
    "node_modules"
  ],
  "files": ["global.d.ts"],
}